<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="ru.practiceground.presentation.viewpager.LikeableItem" />

        <variable
            name="clickHandler"
            type="ru.practiceground.presentation.viewpager.ClickHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.text}"
            android:textColor="@color/black223"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="t’s pretty small and compact. We’re defining a &lt;selector&gt; which contains all the states for which we want to define custom drawables/properties." />

        <CheckBox
            android:id="@+id/item_like_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/heart_selector"
            android:button="@null"
            android:checked="@{data.liked}"
            android:onClick="@{() -> clickHandler.onLikeClick.invoke(data)}"
            android:stateListAnimator="@animator/scale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_text_tv" />

        <ImageView
            android:id="@+id/item_delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:onClick="@{() -> clickHandler.onDeleteClick.invoke(data)}"
            android:src="@drawable/ic_delete_forever_24"
            app:layout_constraintEnd_toStartOf="@+id/item_like_btn"
            app:layout_constraintTop_toTopOf="@+id/item_like_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>